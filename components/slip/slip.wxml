<movable-area class="slip-container" style="width:{{sysWidth+htnWidth}}px;margin-left:-{{htnWidth}}px;">
  <movable-view style="background:{{slipBackground}}" class="slip-content" direction="horizontal" inertia="true" x="{{x}}" damping="100" disabled="{{disabled}}">
    <slot name="slip-center"></slot>
  </movable-view>
  <view class="slip-control">
    <view id="control" class="controls">
      <slot name="slip-control"></slot>
    </view>
  </view>
</movable-area>